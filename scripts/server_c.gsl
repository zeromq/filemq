$(ctype)
$(class.name)_$(name:c) ($(class.name)_t *self\
.   method.send = "send"
.   for argument
.       method.send = "sendm"
.       if last ()
.           argument.send = "send"
.       else
.           argument.send = "sendm"
.       endif
.       if type = "string"
